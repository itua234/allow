<!DOCTYPE html>
<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
        <link rel="stylesheet" href="./styles.css">
    </head>
    <style>
    #intro, #step1, #step2, #step3 {
        display: none;
        width: 100%;
        position: absolute;
        left: 0;
        right: 0;
        transition: all 0.3s ease;
    }
    #intro {
        display: block;
        position: relative;
    }
    </style>
    <body>
        <div class="modal-overlayy">
            <div class="modal-content bg-white rounded-3 position-relative" style="max-width:400px;max-height:500px;overflow:scroll;padding: 30px 15px !important">
                <div class="">
                    <img src="mono-logo.png" alt="Allow" class="mono-logo">
                    <button class="close-button">Ã—</button>
                </div>

                <div class="content-box position-relative">
                    <%- include('steps/intro') %>
                    <%- include('steps/step1') %>
                    <%- include('steps/step2') %>

                    <div class="" id="step3">
                        <div class="text-center">
                            <h3 class="">
                                Enter your email address
                            </h3>
                        </div>
                        <div class="mb-4">
                            <input type="text" class="form-control" id="emailInput" placeholder="Enter email address">
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <script src="/assets/js/jquery.min.js"></script>
        <script>
            $(document).ready(function() {
                $("#intro").show();
                $("#step1, #step2, #step3").hide();
        
                function showStep(currentStep, nextStep, direction = 'right') {
                    const width = $('.content-box').width();
                    
                    // Set initial positions
                    $(nextStep).css({
                        display: 'block',
                        left: direction === 'right' ? width : -width,
                        position: 'absolute'
                    });
                    
                    $(currentStep).css({
                        position: 'absolute'
                    });
        
                    // Animate
                    $(currentStep).animate({ left: direction === 'right' ? -width : width }, 300);
                    $(nextStep).animate({ left: 0 }, 300, function() {
                        $(currentStep).hide();
                        $(nextStep).css('position', 'relative');
                    });
                }
        
                // $(".link-button").click(function() {
                //     showStep("#intro", "#step1");
                // });
                $("#intro .link-button").click(function() {
                    showStep("#intro", "#step1");
                });

                $("#step1 .link-button").click(function() {
                    showStep("#step1", "#step2");
                });

                $("#step2 .link-button").click(function() {
                    showStep("#step2", "#step3");
                });
            });
        </script>
    </body>
</html>